<link rel="stylesheet" type="text/css" href="/app/css/main.css" />
<script src="/app/js/jquery.js" type="text/javascript"></script>
<script src="https://cdn.datatables.net/v/bs4-4.1.1/dt-1.10.18/b-1.5.4/sl-1.2.6/datatables.min.js" type="text/javascript"></script>
<script src="/app/js/dataTables.altEditor.free.js" type="text/javascript"></script>

<ul class='custom-menu'>
  <li data-action="edit">Edit</li>
</ul>
<table class="dataTable table-striped" id="example"></table>
<br />
<table border="0" cellspacing="5" cellpadding="5">
	<tbody>
		<tr>
            <td>Day of week:</td>
            <td>
				<select id="daySelector" class="updateTable">
					<option value="1">Monday</option>
					<option value="2">Tuesday</option>
					<option value="3">Wednesday</option>
					<option value="4">Thursday</option>
					<option value="5">Friday</option>
					<option value="6">Saturday</option>
					<option value="0">Sunday</option>
				</select>
			</td>
        </tr>
		<tr>
            <td>Version:</td>
            <td>
				<select id="optionSelector">
					<option value="1">v1</option>
					<option value="2">v2</option>
				</select>
			</td>
        </tr>
    </tbody>
</table>

<script src="/app/js/dataTablesInit.js" type="text/javascript"></script>
<script type="text/javascript">
	$(document).ready(function() {
		var columns = [
			{ title: "Id", visible: false, type: "hidden" }, 
			{ title: "Variant", visible: false, type: "hidden" },
			{ title: "Day", visible: false, type: "hidden" },
			{ title: "Weight" },
			{ title: "Excercise", type: "textarea" }
		];
		
		var search = function(settings, data, dataIndex ) {
			var day = parseFloat(data[2]) || 0;
			var variant = parseFloat(data[1]) || 0;
			return day == $("#daySelector").val() && variant ==  $("#optionSelector").val();			
		};
		
		Initialize('/app/data/fitness.json', "/updateFitnessItem", columns, null, search);
	});
</script>